<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/normal_action_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_height"
    android:background="@drawable/shape_gradient_blue_blue">

    <LinearLayout
        android:id="@+id/normal_action_bar_left"
        android:layout_width="@dimen/dy_50dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/normal_action_bar_center"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/normal_action_bar_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:paddingLeft="@dimen/dy_10dp"
            android:paddingTop="@dimen/dy_20dp"
            android:paddingRight="@dimen/dy_10dp"
            android:paddingBottom="@dimen/dy_20dp"
            android:src="@mipmap/ic_back_white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/normal_action_bar_center"
        android:layout_width="@dimen/dy_0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/normal_action_bar_left"
        app:layout_constraintRight_toLeftOf="@id/normal_action_bar_right"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/normal_action_bar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="这是标题这是标题"
            android:textColor="@color/dy_white"
            android:textSize="@dimen/dy_17dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/normal_action_bar_right"
        android:layout_width="@dimen/dy_50dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/normal_action_bar_center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--        <ImageView-->
        <!--            android:id="@+id/normal_action_bar_menu"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:paddingLeft="10dp"-->
        <!--            android:paddingTop="20dp"-->
        <!--            android:paddingRight="10dp"-->
        <!--            android:paddingBottom="20dp"-->
        <!--            android:src="@mipmap/icon_toolbar_more_line" />-->
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
